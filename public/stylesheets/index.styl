// define core styles

html
  font-family sans-serif

body
body > div
  height 100%
  width 100%

body
  position absolute
  margin 0
  text-align center
  > div
    display flex
    flex-direction column
    justify-content center

h1
  font-weight 100
  margin-top 0

a
  padding 10px

$btn-generic
  min-width 100px
  max-width 200px
  font-size .75rem
  display inline-block
  height 30px
  margin 1rem
  padding 0 2rem
  border-radius 3px
  line-height 30px
  text-transform uppercase
  cursor pointer
  background none

$btn-thin
  border 1px solid
  transition all 0.2s ease-in-out

$btn-thick
  border 2px solid
  font-weight bold
  transition all 0.2s ease-in-out

$btn-pill
  border 2px solid
  border-radius 30px
  font-weight bold
  transition all 0.2s ease-in-out

.btn-thin
  @extends $btn-generic
  @extends $btn-thin

.btn-thick
  @extends $btn-generic
  @extends $btn-thick


.btn-pill
  @extends $btn-generic
  @extends $btn-pill

@keyframes pop
    0%
      -webkit-transform scale(1.1)
    50%
      -webkit-transform scale(0.9)
    100%
      -webkit-transform scale(1)

@keyframes bounce
    50%
      -webkit-transform scale(1.1)


.fill-back
  &:hover
    border-color hsl(200, 100%, 50%)
    background hsla(200, 100%, 50%, 0.1)
    color hsl(200, 100%, 50%)

.fill-bord
  &:hover
    border-color hsl(200, 100%, 50%)
    color hsl(200, 100%, 50%)

.grow
  &:hover
    transform scale(1.1)

.shrink
  &:hover
    transform scale(.9)

.pop
  &:hover
    -webkit-animation-name pop
    -webkit-animation-duration .5s
    -webkit-animation-timing-function linear
    -webkit-animation-iteration-count 1

.bounce
  &:hover
    -webkit-animation-name bounce
    -webkit-animation-duration 1s
    -webkit-animation-timing-function linear
    -webkit-animation-iteration-count infinite
