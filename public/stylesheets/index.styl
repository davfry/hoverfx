// define core styles

html
  font-family sans-serif

body
body > div
  height 100%
  width 100%

body
  position absolute
  margin 0
  text-align center
  > div
    display flex
    flex-direction column
    justify-content center

h1
  font-weight 100
  margin-top 0

a
  padding 10px

$btn-generic
  min-width 100px
  max-width 200px
  font-size .75rem
  display inline-block
  height 30px
  margin 1rem
  padding 0 2rem
  border-radius 3px
  line-height 30px
  text-transform uppercase
  cursor pointer
  background none

.btn-thin-fill
  @extends $btn-generic
  border 1px solid
  transition background 0.3s ease-in-out
  transition border 0.3s ease-in-out
  transition color 0.3s ease-in-out
  &:hover
    border-color hsl(200, 100%, 50%)
    background hsla(200, 100%, 50%, 0.15)
    color hsl(200, 100%, 50%)

.btn-thick-fill
  @extends $btn-generic
  border 2px solid
  font-weight bold
  transition background 0.3s ease-in-out
  transition border 0.3s ease-in-out
  transition color 0.3s ease-in-out
  &:hover
    border-color hsl(200, 100%, 50%)
    color hsl(200, 100%, 50%)

.btn-thick-pill
  @extends $btn-generic
  border 2px solid
  border-radius 30px
  font-weight bold
  transition background 0.3s ease-in-out
  transition border 0.3s ease-in-out
  transition color 0.3s ease-in-out
  &:hover
    border-color hsl(200, 100%, 50%)
    color hsl(200, 100%, 50%)

.btn-thin-grow
  @extends $btn-generic
  border 1px solid
  transition background 0.3s ease-in-out
  transition border 0.3s ease-in-out
  transition color 0.3s ease-in-out
  &:hover
    transform scale(1.1)

