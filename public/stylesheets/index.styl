// define core styles

html
  font-family sans-serif

body
body > div
  height 100%
  width 100%

body
  position absolute
  margin 0
  text-align center
  background hsl(0, 0%, 96%)
  > div
    display flex
    flex-direction column
    justify-content center

h1
  font-weight 100
  margin-top 0

h3
  padding 1.5rem 0

a
  padding 10px
  text-transform none
  text-decoration none
  color hsl(200, 100%, 50%)

header
  position fixed
  top 0
  width 100%
  text-align left
  left 5vw
  background hsl(0, 0%, 96%)
  padding 1.5rem 0
.hero
  width 60vw
  margin auto
  padding 6rem 0

$bg-generic
  width 60vw
  margin auto

.bg-1
  @extends $bg-generic
  background #E0E0E0
  color #04251D

.bg-2
  @extends $bg-generic
  background #BDBDBD

.bg-3
  @extends $bg-generic
  background #9E9E9E
.box
  padding 3rem 0
$btn-generic
  min-width 100px
  max-width 200px
  font-size .75rem
  display inline-block
  height 30px
  margin 1rem
  padding 0 2rem
  border-radius 3px
  line-height 30px
  text-transform uppercase
  cursor pointer
  background none

$btn-thin
  border 1px solid
  transition all 0.2s ease-in-out

$btn-thick
  border 2px solid
  font-weight bold
  transition all 0.2s ease-in-out

$btn-pill
  border 2px solid
  border-radius 30px
  font-weight bold
  transition all 0.2s ease-in-out

.btn-thin
  @extends $btn-generic
  @extends $btn-thin

.btn-thick
  @extends $btn-generic
  @extends $btn-thick


.btn-pill
  @extends $btn-generic
  @extends $btn-pill

@keyframes pop
    0%
      -webkit-transform scale(1)
    25%
      -webkit-transform scale(1.1)
    50%
      -webkit-transform scale(1)
    75%
      -webkit-transform scale(0.9)
    100%
      -webkit-transform scale(1)

@keyframes bounce
    50%
      -webkit-transform scale(1.1)


.fill-back
  &:hover
    border-color hsl(200, 100%, 50%)
    background rgba(34, 174, 196, 0.1)
    color hsl(200, 100%, 50%)

.fill-bord
  &:hover
    border-color hsl(200, 100%, 50%)
    color hsl(200, 100%, 50%)

.grow
  &:hover
    transform scale(1.1)

.shrink
  &:hover
    transform scale(.9)

.pop
  &:hover
    -webkit-animation-name pop
    -webkit-animation-duration .5s
    -webkit-animation-timing-function linear
    -webkit-animation-iteration-count 1

.bounce
  &:hover
    -webkit-animation-name bounce
    -webkit-animation-duration .75s
    -webkit-animation-timing-function linear
    -webkit-animation-iteration-count infinite
